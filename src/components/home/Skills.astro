---
import { skills } from "@/constants/skills"
import { Marquee } from "../ui/marquee"
---

<Marquee
  pauseOnHover
  className="mask-x-from-background container mask-x-from-50% [--duration:20s]"
>
  {
    skills.map(({ name, logo: Logo, color }) => (
      <figure
        class="flex h-full min-w-44 flex-col items-center justify-center gap-y-1.5"
        title={name}
      >
        <Logo size={48} fill={color} color={color} />
        <figcaption class="font-mono text-sm uppercase">{name}</figcaption>
      </figure>
    ))
  }
</Marquee>
